{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start frontend",
        "type": "shell",
        "command": "npm run dev",
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        },
        "problemMatcher": []
      },
      {
        "label": "Start backend",
        "type": "shell",
        "command": "mvn spring-boot:run",
        "options": {
          "cwd": "${workspaceFolder}/backend"
        },
        "problemMatcher": []
      },
      {
        "label": "Start ner-service",
        "type": "shell",
        "command": "uvicorn main:app --reload --port 8000",
        "options": {
          "cwd": "${workspaceFolder}/ner-service"
        },
        "problemMatcher": []
      },
      {
        "label": "Start image-service",
        "type": "shell",
        "command": "uvicorn main:app --reload --port 8090",
        "options": {
          "cwd": "${workspaceFolder}/image-service"
        },
        "problemMatcher": []
      },
      {
        "label": "Start All Services",
        "dependsOn": [
          "Start frontend",
          "Start backend",
          "Start ner-service",
          "Start image-service"
        ],
        "dependsOrder": "parallel"
      }
      
    ]
  }
  