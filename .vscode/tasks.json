{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Frontend",
        "type": "shell",
        "command": "npm run dev",
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        },
        "group": "build",
        "problemMatcher": [],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "new",
          "showReuseMessage": true,
          "clear": false
        }
      },
      {
        "label": "Start Backend",
        "type": "shell",
        "command": "mvn spring-boot:run",
        "options": {
          "cwd": "${workspaceFolder}/backend"
        },
        "group": "build",
        "problemMatcher": [],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "new",
          "showReuseMessage": true,
          "clear": false
        }
      },
      {
        "label": "Start Playwright",
        "type": "shell",
        "command": "py -m uvicorn main:app --reload --port 8080",
        "options": {
          "cwd": "${workspaceFolder}/playwright"
        },
        "group": "build",
        "problemMatcher": [],
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "new",
          "showReuseMessage": true,
          "clear": false
        }
      },
      {
        "label": "Start All Services",
        "dependsOrder": "parallel",
        "dependsOn": [
          "Start Frontend",
          "Start Backend",
          "Start Playwright"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Start Backend + Playwright",
        "dependsOrder": "parallel",
        "dependsOn": [
          "Start Backend",
          "Start Playwright"
        ],
        "group": "build",
        "problemMatcher": []
      },
      {
        "label": "Build Backend",
        "type": "shell",
        "command": ".\\mvnw.cmd clean install",
        "options": {
          "cwd": "${workspaceFolder}/backend"
        },
        "group": "build",
        "problemMatcher": []
      }
    ]
}
  